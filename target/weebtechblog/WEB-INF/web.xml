<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0" metadata-complete="true">

  <!-- Register Servlet Mapping -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.weebtech.blog.servlets.RegisterServlet</servlet-class>
  </servlet>

  <!-- Login Servlet Mapping -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.weebtech.blog.servlets.LoginServlet</servlet-class>
  </servlet>

  <!-- Logout Servlet Mapping -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.weebtech.blog.servlets.LogoutServlet</servlet-class>
  </servlet>

  <!-- Edit Servlet  Mapping -->
  <servlet>
    <servlet-name>EditServlet</servlet-name>
    <servlet-class>com.weebtech.blog.servlets.EditServlet</servlet-class>
  </servlet>

  <!-- ====================={ URL-PATTERN }===================== -->

  <!-- Register Servlet Url Pattern -->
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet Url Pattern -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet Url Pattern -->
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>

  <!-- Edit Servlet  Url Pattern -->
  <servlet-mapping>
    <servlet-name>EditServlet</servlet-name>
    <url-pattern>/EditServlet</url-pattern>
  </servlet-mapping>
</web-app>